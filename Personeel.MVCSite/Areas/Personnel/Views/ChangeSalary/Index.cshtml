@model IEnumerable<Personeel.MVCSite.Models.SalaryViewModels.ChangeBasicSalaryViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>调薪管理</h2>

<p>
    @Html.ActionLink("调薪记录", "Index", "ChangeSalaryRecords", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BasicSalary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BasicSalary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Department)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position)
        </td>
        <td>
            @Html.ActionLink("调薪", "Edit", new { id=item.UserGuid })
        </td>
    </tr>
}

</table>
