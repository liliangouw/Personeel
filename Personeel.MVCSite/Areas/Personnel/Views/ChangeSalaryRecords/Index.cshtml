@model IEnumerable<Personeel.MVCSite.Models.SalaryViewModels.ChangeSalaryRecordViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>调薪记录</h2>

<p>
    @Html.ActionLink("返回", "Index","ChangeSalary")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reason)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BeforeSalary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChangedSalary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChangeDateTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Reason)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BeforeSalary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChangedSalary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChangeDateTime)
