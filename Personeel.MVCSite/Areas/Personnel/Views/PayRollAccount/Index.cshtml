@using Webdiyer.WebControls.Mvc;
@using Personeel.DTO;
@model PagedList<Personeel.MVCSite.Models.SalaryViewModels.AddSalaryViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>工资账套管理</h2>
<p>@Html.ActionLink("添加账套", "Select", new { }, new { @class = "btn btn-primary" })</p>
@using (Html.BeginForm("Index", ViewContext.RouteData.GetRequiredString("Controller"), new RouteValueDictionary { { "id", "" } }, FormMethod.Get))
{
    <div class="well well-sm">
        <span>姓名：</span><input type="text" name="Name" value="@Request.QueryString["Name"]" style="width:120px" />

        <input type="submit" value="搜索" class="btn btn-success" accesskey="S" />
    </div>
}


<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BasicSalary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subsidies)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Accumulationfund)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SocialSecurity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tax)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BasicSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subsidies)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Accumulationfund)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SocialSecurity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tax)
            </td>
            <td>
                @Html.ActionLink("修改", "Edit", new { id = item.Id }) |
                @Html.ActionLink("删除", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<tr>
    <td colspan="6">
        <nav>
            @Html.Pager(Model, new PagerOptions
       {
           PageIndexParameterName = "id",
           ContainerTagName = "ul",
           CssClass = "pagination",
           CurrentPagerItemTemplate = "<li class=\"active\"><a href=\"#\">{0}</a></li>",
           DisabledPagerItemTemplate = "<li class=\"disabled\"><a>{0}</a></li>",
           PagerItemTemplate = "<li>{0}</li>",
           Id = "bootstrappager"
       })
        </nav>

    </td>
</tr>