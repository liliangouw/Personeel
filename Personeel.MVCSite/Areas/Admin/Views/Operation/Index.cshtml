@model IEnumerable<Personeel.MVCSite.Models.OperationViewModels.OperationListViewModel>

@{
    ViewBag.Title = "Index";
}
@section headers{
    <style>
        ul.pagination {
            display: inline-block;
            padding: 0;
            margin: 0;
        }

            ul.pagination li {
                display: inline;
            }

                ul.pagination li a {
                    color: black;
                    float: left;
                    padding: 8px 16px;
                    text-decoration: none;
                    transition: background-color .3s;
                    border: 1px solid #ddd;
                }

                    ul.pagination li a.active {
                        background-color: #4CAF50;
                        color: white;
                        border: 1px solid #4CAF50;
                    }

                    ul.pagination li a:hover:not(.active) {
                        background-color: #ddd;
                    }
    </style>
  
}
<h2>日志管理</h2>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CreateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.ActionLink("删除", "Delete", new { id = item.Id, name = item.UserName })
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="6">

                <ul class="pagination" id="pagination">
                    @if (ViewBag.PageCount <= 10)
                    {
                        //数据实际数量小于等于可容纳页码数量
                        for (int i = 1; i < ViewBag.PageCount; i++)
                        {
                            <li>
                                <a href="/Admin/Operation/Index?pageIndex=@(i-1)&&pageSize=10">@i</a>
                            </li>
                        }
                    }
                    else
                    {
                        //数据实际数量大于等于可容纳页码数量
                        if (ViewBag.PageIndex <= 10 / 2 + 1)
                        {
                            for (int i = 1; i < 10; i++)
                            {
                                <li>
                                    <a href="/Admin/Operation/Index?pageIndex=@(i-1)&&pageSize=10">@i</a>
                                </li>
                            }
                        }
                        else if ((ViewBag.PageCount - ViewBag.PageIndex) <= 10 / 2)
                        {
                            for (int i = ViewBag.PageCount - (10 - 1); i < ViewBag.PageCount; i++)
                            {
                                <li>
                                    <a href="/Admin/Operation/Index?pageIndex=@(i-1)&&pageSize=10">@i</a>
                                </li>
                            }
                        }
                        else
                        {
                            for (int i = ViewBag.PageIndex - 10 / 2; i < ViewBag.PageIndex + 10 / 2; i++)
                            {
                                <li>
                                    <a href="/Admin/Operation/Index?pageIndex=@(i-1)&&pageSize=10">@i</a>
                                </li>
                            }
                        }
                    }
                </ul>
            </td>
        </tr>
    </tfoot>
</table>
