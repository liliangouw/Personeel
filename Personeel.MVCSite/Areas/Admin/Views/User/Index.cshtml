@model IEnumerable<Personeel.MVCSite.Models.UserViewModels.UserListViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>用户管理</h2>

<p>
    @Html.ActionLink("添加用户", "AddUser")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserPower)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserNum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Department)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserPower)
        </td>
        <td>
            @Html.ActionLink("修改", "Edit", new { email=item.Email   }) |
            @Html.ActionLink("详情", "Details", new { email=item.Email }) |
            @Html.ActionLink("删除", "Delete", new {  email=item.Email })
        </td>
    </tr>
}

</table>
