@model IEnumerable<Personeel.MVCSite.Models.EventViewModels.EventIndexViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>通用审批</h2>

<p>
    @Html.ActionLink("新建申请", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EventSort)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EventState)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApproveTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EventSort)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EventState)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApproveTime)
        </td>
        <td>
            @Html.ActionLink("详情", "Details", new { id=item.Id }) |
            @Html.ActionLink("撤销", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
